<% include header %>
    <h1>Edit Great Quote</h1>
    <form method="post">
        <input type="text" name="id" value="<%= quote.id %>" hidden>
        <div class="form-group">
            <label for="author">Author</label>
            <input type="autor" class="form-control" id="autor" name="author" aria-describedby="author" value="<%= quote.author %>" required>
        </div>
        <div class="form-group">
            <label for="quote">Quote</label>
            <textarea class="form-control" id="quote" name="quote" rows="5" required><%= quote.quote %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <input action="action" onclick="window.history.go(-1); return false;" type="button" value="Cancel" class="btn btn-secondary"/>
    </form>
<% include footer %>