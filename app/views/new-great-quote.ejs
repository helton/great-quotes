<% include header %>
    <h1>New Great Quote</h1>
    <form method="post">
        <div class="form-group">
            <label for="author">Author</label>
            <input type="autor" class="form-control" id="autor" name="author" aria-describedby="author" required>
        </div>
        <div class="form-group">
            <label for="quote">Quote</label>
            <textarea class="form-control" id="quote" name="quote" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <input action="action" onclick="window.history.go(-1); return false;" type="button" value="Cancel" class="btn btn-secondary"/>
    </form>
<% include footer %>